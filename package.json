{
  "private": true,
  "license": "MIT",
  "scripts": {
    "autofix": "yarn prettier && yarn eslint-fix && yarn stylelint-fix && yarn phpcbf",
    "build": "rollup -c",
    "eslint": "eslint 'Script/**/*.js'",
    "eslint-fix": "eslint 'Script/**/*.js' --fix",
    "php-lint": "composer-runner -- run-script lint",
    "phpcs": "composer-runner -- run-script phpcs",
    "phpcbf": "composer-runner -- run-script phpcbf",
    "postinstall": "composer-runner -- install && yarn --cwd node-server install",
    "prettier": "prettier --write --single-quote \"**/*.{{t,j}s{,x,on},{c,sa,sc,le}ss,vue,md,y{,a}ml,graphql}\"",
    "stylelint": "stylelint \"./**/*.{c,sa,sc,le}ss\"",
    "stylelint-fix": "stylelint --fix \"./**/*.{c,sa,sc,le}ss\"",
    "start": "node node-server/serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn php-lint"
    }
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.0.0",
    "js-beautify": "^1.8.4",
    "lint-staged": "^8.2.1",
    "node-composer-runner": "^0.3.0",
    "prettier": "^1.14.2",
    "rollup": "^0.65.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}

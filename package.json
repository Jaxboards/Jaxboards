{
  "name": "jaxboards",
  "version": "4.0.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.4.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "node-composer-runner": "^0.4.0",
    "prettier": "^3.8.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^37.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "composer": "2.9.5"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "autofix": "bun run prettier && bun run eslint-fix && bun run stylelint-fix && bun run rector && bun run phpcbf && bun run php-cs-fixer",
    "dev": "bun run build -- --watch",
    "build": "bun build --entrypoints Script/app.ts Script/acp.ts --outdir=dist/ --bundle --minify",
    "ci-lint": "bun run eslint-report && bun run stylelint-report && bun run parallel-lint-report && bun run phpcs-report && bun run phpstan-report && bun run psalm-report && bun run phpmd-report",
    "eslint": "eslint \"Script/**/*.ts\"",
    "eslint-fix": "eslint \"Script/**/*.ts\" --fix",
    "eslint-report": "eslint \"Script/**/*.ts\" --format json --output-file eslint-report.json",
    "lint": "bun run eslint && bun run stylelint && bun run parallel-lint && bun run phpcs && bun run phpstan && bun run psalm && bun run phpmd",
    "parallel-lint": "composer-runner -- run-script --no-interaction parallel-lint",
    "parallel-lint-report": "composer-runner -- run-script --no-interaction parallel-lint-report",
    "php-cs-fixer": "composer-runner -- run-script --no-interaction php-cs-fixer",
    "php-lint": "composer-runner -- run-script --no-interaction lint",
    "phpcbf": "composer-runner -- run-script --no-interaction phpcbf",
    "phpcs": "composer-runner -- run-script --no-interaction phpcs",
    "phpcs-report": "composer-runner -- run-script --no-interaction phpcs-report",
    "phpmd": "composer-runner -- run-script --no-interaction phpmd",
    "phpmd-report": "composer-runner -- run-script --no-interaction phpmd-report",
    "phpstan": "composer-runner -- run-script --no-interaction phpstan",
    "phpstan-report": "composer-runner -- run-script --no-interaction phpstan-report",
    "postinstall": "composer-runner -- install",
    "prettier": "prettier --write \"**/*.{htm{,l},{t,j}s{,x,on},{c,sa,sc,le}ss,vue,md,graphql}\"",
    "psalm": "composer-runner -- run-script --no-interaction psalm",
    "psalm-report": "composer-runner -- run-script --no-interaction psalm-report",
    "rector": "composer-runner -- run-script --no-interaction rector",
    "stylelint": "stylelint \"./**/*.{c,sa,sc,le}ss\" --ignore-path .gitignore",
    "stylelint-fix": "stylelint --fix \"./**/*.{c,sa,sc,le}ss\" --ignore-path .gitignore",
    "stylelint-report": "stylelint \"./**/*.{c,sa,sc,le}ss\" --formatter json --output-file stylelint-report.json --ignore-path .gitignore",
    "prepare": "husky",
    "test": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "type": "module"
}

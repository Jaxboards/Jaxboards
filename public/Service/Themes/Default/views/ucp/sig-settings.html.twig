<form method="post" data-ajax-form="true">
    Signature preview:
    <br>
    {{ user.sig|default('( none )')|theWorks }}
    <br>
    <br>
    <textarea
        name="changesig"
        id="changesig"
        title="Your signature"
        class="bbcode-editor"
    >{{ user.sig }}</textarea>
    <br>
    <input type="submit" value="Change" title="Update your signature">
</form>

{
  "config": {
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "platform": {
      "composer": "2.8.6",
      "php": "8.3.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.73",
    "phpcompatibility/php-compatibility": "^9.3",
    "roave/security-advisories": "dev-master@dev",
    "squizlabs/php_codesniffer": "^3.12"
  },
  "require": {
    "composer": "2.8.6",
    "php": "^8.3"
  },
  "scripts": {
    "lint": [
      "@phpcs"
    ],
    "php-cs-fixer": "php-cs-fixer fix --allow-risky yes --verbose --verbose",
    "phpcbf": "phpcbf",
    "phpcs": "phpcs -s",
    "phpcs-report": [
      "phpcs -s --report-file=phpcs-report.json --report=json --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1",
      "php php_codesniffer_to_sonarqube.php phpcs-report.json phpcs-report-sonarqube.json"
    ]
  }
}

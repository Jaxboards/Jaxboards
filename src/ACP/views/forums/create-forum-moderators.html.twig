<table class="settings">
    <tr>
        <th scope="row">
            Moderators:
        </th>
        <td>
            {{ mod_list }}
            <br>
            <input type="text" name="name" title="Add Forum Moderator" data-autocomplete-action="searchmembers"
                data-autocomplete-output="#modid" data-autocomplete-indicator="#validname">
            <input type="hidden" id="modid" name="modid">
            <span id="validname"></span>
            <input type="submit" name="submit" value="Add Moderator">
        </td>
    </tr>
    <tr>
        <th scope="row">Show "Forum Led By":</th>
        <td>
            <input {{ showLedBy }} type="checkbox" class="switch yn" name="showLedBy" title="Forum Led By Toggle" />
        </td>
    </tr>
</table>

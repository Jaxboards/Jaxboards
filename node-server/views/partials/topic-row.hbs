<tr id="fr_{{topic.id}}" class="{{#if topic.pinned}}pinned{{/if}}{{#if topic.locked}}locked{{/if}} %13$s">
  <td class="f_icon">
    {{! TODO: topic read/unread }}
    {{#if topic.isRead}}
      {{#link "topic" topic.id queryParams=(hash markRead=true) id="tid_{{topic.id}}_icon"}}
        <img src="/Service/Themes/Default/icons/read.png" alt="read" />
      {{/link}}
    {{else}}
      <a id="tid_{{topic.id}}_icon">
        <img src="/Service/Themes/Default/icons/unread.png" />
      </a>
    {{/if}}
  </td>
  <td class="topic">
    {{#link "topic" topic.id title=topic.summary data-use-tooltip="true"}}
      {{topic.title}}
    {{/link}}
    {{! TODO: Mod controls }}
    {{#if can_moderate}}
      <a href="?act=modcontrols&do=modt&tid={{topic.id}}" class="moderate" onclick="RUN.modcontrols.togbutton(this)"></a>
    {{/if}}
    <br />
    {{topic.subtitle}} {{! TODO: Insert page links }}
  </td>
  <td class="item_1">
    {{#if topic.author}}
      {{> user-link user=topic.author}}
    {{/if}}
  </td>
  <td class="item_2">
    Replies: {{topic.replies}}
    <br />
    Views: {{topic.views}}
  </td>
  <td class="last_post">
    {{#if topic.last_poster}}
      {{#link "topic" topic.id queryParams=(hash getLast=true)}}
        {{date topic.lp_date}}
      {{/link}}
      <br />
      By {{> user-link user=topic.last_poster}}
    {{/if}}
  </td>
</tr>
